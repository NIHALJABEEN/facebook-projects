<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jbn.facebook.Secondpage"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/frameLayout">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="90dp"
            android:id="@+id/imageView"
            android:background="@drawable/profile"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="292dp"
            android:layout_height="113dp"
            android:background="@drawable/mltpl"
            android:id="@+id/imageView2"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:hint="What's on your mind?" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton2"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/fbloc"
            android:layout_marginLeft="-30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Location"
            android:id="@+id/textView8"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton3"
            android:layout_gravity="top|right"
            android:layout_marginRight="100dp"
            android:background="@drawable/fbmore" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="More"
            android:id="@+id/textView9"
            android:layout_gravity="right|top"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp" />

    </FrameLayout>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageButton"
        android:background="@drawable/icon_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Add Photos"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#0aa5b9"
        android:id="@+id/frameLayout2">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_gravity="center_horizontal|top"
            android:background="#a6c4d4"
            android:layout_marginTop="6dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="POST"
                android:id="@+id/button"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="15dp"
                android:background="#000ea8"
                android:textColor="#ffffff" />
        </FrameLayout>

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/globeblue"
            android:id="@+id/imageButton4"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp" />

        ameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/frameLayout2"
        android:layout_marginBottom="-60dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:id="@+id/imageView3"
            android:layout_gravity="left|top"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/pro2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Abdul Rauf > Nihal Jabeen k"
            android:id="@+id/textView10"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="19dp" />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:id="@+id/imageView4"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="15dp"
            android:background="@drawable/a"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="191dp"
            android:layout_height="106dp"
            android:id="@+id/imageView5"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-8dp"
            android:background="@drawable/b" />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="80dp"
            android:id="@+id/imageView6"
            android:layout_gravity="left|bottom"
            android:background="@drawable/c"
            android:layout_marginLeft="10dp"
            android:paddingTop="100dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="191dp"
            android:layout_height="125dp"
            android:id="@+id/imageView7"
            android:layout_gravity="right|bottom"
            android:background="@drawable/d"
            android:layout_marginRight="7dp" />
    </FrameLayout>

</RelativeLayout>

