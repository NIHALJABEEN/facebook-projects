<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1"
    android:background="#e9e4ff"
    android:orientation="horizontal">

    <Button
        android:layout_width="333dp"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/log"
        android:background="#000092"
        android:textColor="#ffffff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="200dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="-390dp"
        android:layout_marginBottom="300dp"
        android:layout_gravity="top"
        android:paddingBottom="-150dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/pw"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:hint=" Password"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="30dp"
            android:gravity="bottom"
            android:layout_marginTop="143dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/eid"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:hint="   Email or Phone Number"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:gravity="top"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:id="@+id/tv"
            android:layout_gravity="left|center_horizontal"
            android:layout_marginLeft="30dp" />

    </FrameLayout>
    <FrameLayout
        android:layout_width="430dp"
        android:layout_height="331dp"
        android:layout_marginLeft="-400dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="190dp"
        android:layout_marginRight="1000dp"

        >

        <Button
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="Create New Account"
            android:id="@+id/reg"
            android:layout_gravity="top|center"
            android:background="#3c54ff"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="        Forgotten password?"
            android:id="@+id/textView"
            android:layout_gravity="top|left|center_vertical"
            android:paddingLeft="50dp"
            android:textColor="#0ea0ff"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="45dp" />

        <TextView
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Help Centre"
            android:id="@+id/textView2"
            android:layout_gravity="right|top"
            android:phoneNumber="false"
            android:textColor="#0ea0ff"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="45dp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:layout_gravity="top|center|right"
            android:layout_marginBottom="10dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="English(UK)"
                android:id="@+id/textView3"
                android:layout_gravity="left|top"
                android:paddingLeft="25dp"
                android:paddingTop="25dp"
                android:layout_marginLeft="50dp" />

            <TextView
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="मराठी"
                android:id="@+id/textView4"
                android:layout_gravity="right"
                android:layout_marginLeft="50dp"
                android:paddingTop="25dp" />

            <TextView
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="മലയാളം"
                android:id="@+id/textView5"
                android:layout_gravity="right|center_vertical" />

            <TextView
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=" हिन्दी"
                android:id="@+id/textView6"
                android:layout_gravity="left|center_vertical"
                android:paddingLeft="50dp"
                android:layout_marginLeft="30dp" />
        </FrameLayout>


    </FrameLayout>


</LinearLayout>
